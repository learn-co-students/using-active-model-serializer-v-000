<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
     <%= f.label :description %>
    <%=f.text_area :description %><br>
     <% if @post.new_record?%>
    <%= f.submit "Submit Post" %>
    <% else %>
    <%= f.submit "Update Post" %> 
    <% end %>
  <% end %>